static void Main(string[] args)
        {
            int hour = int.Parse(Console.ReadLine());
            int min= int.Parse(Console.ReadLine());
            min += hour * 60;
            min = min + 15;

            hour = min / 60;
            min = min % 60;
            
            
            
            if (hour==24)
            {
                Console.WriteLine($"0:{min:D2}");
            }
            else 
            {
                Console.WriteLine($"{hour}:{min:D2}");
            }
        }
