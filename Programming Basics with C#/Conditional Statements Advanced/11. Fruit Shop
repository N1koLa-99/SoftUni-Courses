static void Main(string[] args)
        {
            string fruit = Console.ReadLine();
            string days = Console.ReadLine();
            double quantiti = double.Parse(Console.ReadLine());
            double price = 0;


            if (days == "Monday" || days == "Tuesday" || days == "Wednesday" || days == "Thursday" || days == "Friday")
            {


                if (fruit == "banana")
                {
                    price = price + quantiti * 2.5;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "apple")
                {
                    price = price + quantiti * 1.20;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "orange")
                {
                    price = price + quantiti * 0.85;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "grapefruit")
                {
                    price = price + quantiti * 1.45;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "kiwi")
                {
                    price = price + quantiti * 2.70;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "pineapple")
                {
                    price = price + quantiti * 5.50;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "grapes")
                {
                    price = price + quantiti * 3.85;
                    Console.WriteLine($"{price:F2}");
                }
                else
                {
                    Console.WriteLine("error");
                }

            }



            else if (days == "Saturday" || days == "Sunday")
            {
                if (fruit == "banana")
                {
                    price = price + quantiti * 2.70;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "apple")
                {
                    price = price + quantiti * 1.25;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "orange")
                {
                    price = price + quantiti * 0.90;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "grapefruit")
                {
                    price = price + quantiti * 1.60;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "kiwi")
                {
                    price = price + quantiti * 3.00;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "pineapple")
                {
                    price = price + quantiti * 5.60;
                    Console.WriteLine($"{price:F2}");
                }
                else if (fruit == "grapes")
                {
                    price = price + quantiti * 4.20;
                    Console.WriteLine($"{price:F2}");
                }
                else
                {
                    Console.WriteLine("error");
                }

            }


            else
            {
                Console.WriteLine("error");
            }

        }
