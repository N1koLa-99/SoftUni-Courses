static void Main(string[] args)
        {
            string town = Console.ReadLine();
            double sale = double.Parse(Console.ReadLine());
            double price = 0;
            if (town=="Sofia")
            {
                if (sale > 0 && sale <= 500)
                {
                    price = price + sale * 0.05;
                    Console.WriteLine($"{price:F2}");
                }
                else if (sale > 500 && sale <= 1000)
                {
                    price = price + sale * 0.07;
                    Console.WriteLine($"{price:F2}");
                }
                else if (sale > 1000 && sale <= 10000)
                {
                    price = price + sale * 0.08;
                    Console.WriteLine($"{price:F2}");
                }
                else if (sale > 10000)
                {
                    price = price + sale * 0.12;
                    Console.WriteLine($"{price:F2}");
                }
                else
                {
                    Console.WriteLine("error");
                }

            }
             
            else  if (town == "Varna")
            {
                if (sale > 0 && sale <= 500)
                {
                    price = price + sale * 0.045;
                    Console.WriteLine($"{price:F2}");
                }
                else if (sale > 500 && sale <= 1000)
                {
                    price = price + sale * 0.075;
                    Console.WriteLine($"{price:F2}");
                }
                else if (sale > 1000 && sale <= 10000)
                {
                    price = price + sale * 0.10;
                    Console.WriteLine($"{price:F2}");
                }
                else if (sale > 10000)
                {
                    price = price + sale * 0.13;
                    Console.WriteLine($"{price:F2}");
                }
                else
                {
                    Console.WriteLine("error");
                }
            }
           
          else if (town == "Plovdiv")
            {
                if (sale > 0 && sale <= 500)
                {
                    price = price + sale * 0.055;
                    Console.WriteLine($"{price:F2}");
                }
                else if (sale > 500 && sale <= 1000)
                {
                    price = price + sale * 0.08;
                    Console.WriteLine($"{price:F2}");
                }
                else if (sale > 1000 && sale <= 10000)
                {
                    price = price + sale * 0.12;
                    Console.WriteLine($"{price:F2}");
                }
                else if (sale > 10000)
                {
                    price = price + sale * 0.145;
                    Console.WriteLine($"{price:F2}");
                }
                else
                {
                    Console.WriteLine("error");
                }
               
          }
            else
            {
                Console.WriteLine("error");
            }
        }
