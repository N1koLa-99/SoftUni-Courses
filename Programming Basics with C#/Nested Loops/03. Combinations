using System;

namespace lojenicikli
{
    class Program
    {
        static void Main(string[] args)
        {
            int counter = 0;
            int n = int.Parse(Console.ReadLine());
            for (int x1 = 0; x1 <= n; x1++)
            {
                for (int x2 = 0; x2 <= n; x2++)
                {
                    for (int x3 = 0; x3 <= n; x3++)
                    {
                        if (x1 + x2 + x3 == n)
                            counter++;
                    }
                }
            }
            Console.WriteLine(counter);

        }
    }
}
