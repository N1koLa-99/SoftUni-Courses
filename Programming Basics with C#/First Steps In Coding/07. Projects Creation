using System;

namespace FurstStepsInProfessional_22_04
{
    class Program
    {
        static void Main(string[] args)
        {
            string name = Console.ReadLine();
            int pro = int.Parse(Console.ReadLine());
            int sum = pro * 3;
            Console.WriteLine($"The architect {name} will need {sum} hours to complete {pro} project/s.");
           
           
        }
    }
}
