using System;

namespace Yard_Greening
{
    class Program
    {
        static void Main(string[] args)
        {
            double yard = double.Parse(Console.ReadLine());
            double fullPrice = yard * 7.61;
            double discount = fullPrice*0.18;
            double Price = fullPrice - discount;
            Console.WriteLine($"The final price is: {Price} lv.");
            Console.WriteLine($"The discount is: {discount} lv.");

        }
    }
}
